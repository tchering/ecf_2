{% extends "base.html.twig" %}
{% block body %}
	<div class="d-flex justify-content-center mt-4">
		<div class="w-50 bg-light shadow-lg p-3">
			<h1 class="title text-dark" id="client">Insert New Evaluation Line</h1>
			<a href="" id="modal_close">
				<i class="fa fa-close"></i>
			</a>
			{{ form_start(form, {'attr': {'class': 'text_center'}}) }}

			<div class="zone_saisie my-2 row">
				{{ form_label(form.note, null, {'label_attr': {'class': 'lab20 fw-bold col-12 col-md-3'}, 'label': 'Note'}) }}
				{{ form_widget(form.note, {'attr': {'class': 'form-control w-50'}}) }}
			</div>
			<!-- Add other fields similarly -->
			<div class="zone_saisie my-2 row">
				{{ form_label(form.appreciation, null, {'label_attr': {'class': 'lab20 fw-bold col-12 col-md-3'}, 'label': 'Appreciation'}) }}
				{{ form_widget(form.appreciation, {'attr': {'class': 'form-control w-50'}}) }}
			</div>
			<div class="zone_saisie my-2 row">
				{{ form_label(form.evaluation, null, {'label_attr': {'class': 'lab20 fw-bold col-12 col-md-3'}, 'label': 'EVALUATION'}) }}
				{{ form_widget(form.evaluation, {'attr': {'class': 'form-control w-50'}}) }}
			</div>
			<div class="zone_saisie my-2 row">
				{{ form_label(form.individu, null, {'label_attr': {'class': 'lab20 fw-bold col-12 col-md-3'}, 'label': 'ELEVE'}) }}
				{{ form_widget(form.individu, {'attr': {'class': 'form-control w-50'}}) }}
			</div>

			<div class="d-flex justify-content-between mt-4">
				<a href="{{ path('app_eval') }}" class="btn btn-secondary">Close</a>
				<a href="" class="btn btn-primary">Cancel</a>
				<button type="submit" class="btn btn-success">Validate</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
